rules_version = '2';
service cloud.firestore {

  // Determine if the value of the field "key" is the same
  // before and after the request.
  function unchanged(key) {
    return (key in resource.data) 
      && (key in request.resource.data) 
      && (resource.data[key] == request.resource.data[key]);
  }

  // Helper function to check if user is admin
  function isAdmin() {
    return request.auth != null && 
           (request.auth.token.admin == true || 
            request.auth.uid == 'CtAyzps80VXRzna32Kdy0NHYcPe2');
  }

  match /databases/{database}/documents {

    // Allow client to read and write defined corridors
    match /defined_corridors/{corridorId} {
      allow read, write: if true; // For development, consider request.auth != null for production
    }

    // Allow client to read businesses
    match /businesses/{businessId} {
      allow read,write : if true;      // For development, consider request.auth != null for production
      //allow write: if false; // Keep business writes server-side or admin-only for now
    }

    // Admin collection for managing users
    match /admin/{document=**} {
      allow read, write: if isAdmin();
    }
    // Admin data collection for application configuration
    match /admin_data/{document=**} {
      allow read, write: if isAdmin();
    }
    
    // Public data collection - anyone can read, only admins can write
    match /public_data/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Body Shop Navigator: Businesses Collection
    //   - Anyone can read (for initial app functionality without auth)
    //   - Authenticated users can write (placeholder - refine for production)
    match /business/{businessId} {
      allow read: if true;
      allow write: if request.auth != null; 
    }

    // Body Shop Navigator: People Collection
    //   - Anyone can read (for initial app functionality without auth)
    //   - Authenticated users can write (placeholder - refine for production)
    match /people/{personId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    
    match /jobs/{jobId} {
      allow read, write: if request.auth.token.admin == true;
    }  

    // Users:
    //   - Authenticated user can read and write their own document
    //   - Admin can access all documents
    match /users/{userId} {
      allow read, write: if request.auth != null && 
        (request.auth.uid == userId || isAdmin());
    }

    // User Tokens:
    match /user_tokens/{userId} {
      // Full access for authenticated user's own document or admin
      allow read, write, delete: if request.auth != null && 
        (request.auth.uid == userId || isAdmin());

      // Public can only read authorizedScopes and userEmail for login
      allow read: if 
        request.query.limit <= 1 && 
        request.query.orderBy == "userEmail" &&
        resource.data.keys().hasOnly(["authorizedScopes", "userEmail"]);
    }    

    // Auth Logs:
    match /auth_logs/{logId} {
      // Any authenticated user can write logs
      allow create: if request.auth != null;
      // Only admins can read or delete logs
      allow read, delete: if isAdmin();
      // No updates allowed - logs are immutable
      allow update: if false;
    }    
    
    // Restaurants:
    //   - Authenticated user can read
    //   - Authenticated user can create/update (for demo purposes only)
    //   - Updates are allowed if no fields are added and name is unchanged
    //   - Deletes are not allowed (default)
    match /restaurants/{restaurantId} {
      allow read;
      allow create: if request.auth != null;
      allow update: if request.auth != null
                    && unchanged("name");
      
      // Ratings:
      //   - Authenticated user can read
      //   - Authenticated user can create if userId matches
      //   - Deletes and updates are not allowed (default)
      match /ratings/{ratingId} {
        allow read;
        allow create: if request.auth != null;
        allow update: if request.auth != null
                      && request.resource.data.userId == request.auth.uid;
      }
      match /messages/{messageId} {
        allow read;
        allow create: if request.auth != null;
        allow update: if request.auth != null
                      && request.resource.data.userId == request.auth.uid;
      }      
    }

    // Authorized scopes:
    //   - Anyone can read
    //   - Only owner or admin can write
    match /authorized_scopes/{userId} {
      allow read: if true;
      allow write: if request.auth != null && 
        (request.auth.uid == userId || isAdmin());
    }    
    
    // User scopes:
    match /user_scopes/{userId} {
      allow read: if true;  // Allow public read access
      allow write: if request.auth != null && 
                  (request.auth.uid == userId || 
                   request.auth.uid == 'default' ||
                   isAdmin());
    }

    // User profiles:
    match /user_profiles/{userId} {
      allow read: if true;
      allow write: if request.auth != null && 
        (request.auth.uid == userId || isAdmin());
    }

    match /logs/{logId} {
      allow read, write, delete: if request.auth != null && 
        (request.resource.data.userId == request.auth.uid || isAdmin());
    }        

    match /adminData/{userId} {
      allow read, write, delete: if request.auth != null && 
        (request.auth.uid == userId || userId == 'default' || isAdmin());
    }    

    match /topics/{topicId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null;
    }

    // Collection for interactively defined corridors from test_gmaps_route.mjs
    // Allows any client to write (for test_gmaps_route.mjs)
    // Allows any client to read (server-side script will use admin SDK, but good for client debugging)
    match /defined_corridors/{corridorId} {
      allow read, write: if true; 
    }
  }
}

